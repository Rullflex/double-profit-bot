{
  "compilerOptions": {
    "target": "ES2021",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "pretty": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "strict": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
